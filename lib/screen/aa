          icon: Icon(Icons.search),
        ),
        BottomNavigationBarItem(
          label: "Offer",
          icon: Icon(Icons.local_offer),
        ),
        BottomNavigationBarItem(
          label: "Adopt",
          icon: Icon(Icons.pets),
        )
      ],
      onTap: (int index) {
        setState(() {
          _currentIndex = index;
        });
      },
    );
  }